<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg4"
        android:scaleType="fitXY"

        />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:id="@+id/im1"
        android:src="@drawable/img6"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im1"
        android:id="@+id/ra1"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/ib1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@drawable/addp"


            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/ib2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/ib1"
            android:layout_margin="5dp"
            android:src="@drawable/addm"

            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ib3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/ib1"
            android:layout_margin="5dp"
            android:src="@drawable/ds"

            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ib4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/ib3"
            android:layout_below="@+id/ib2"
            android:layout_margin="5dp"
            android:src="@drawable/ps"

            android:scaleType="centerCrop" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ra1"
        android:layout_centerHorizontal="true"

        >

        <Button
            android:id="@+id/b1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Toss" />

        <Button
            android:id="@+id/b2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/b1"
            android:layout_centerHorizontal="true"
            android:text="Numbering" />
    </RelativeLayout>





</RelativeLayout>